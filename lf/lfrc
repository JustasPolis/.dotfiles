set hidden true
set ignorecase true
set icons true
set shell fish

map s shell

cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

map <enter> open
map <esc> quit


